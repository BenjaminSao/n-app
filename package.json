{
  "name": "@nivinjoseph/n-app",
  "version": "2.0.6",
  "description": "Vue.js based application framework",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "ts-compile": "tsc -p .",
    "ts-lint": "tslint -p . -c tslint.json",
    "ts-build": "npm run ts-compile && npm run ts-lint",
    "ts-build-dist": "npm run ts-build && tsc -p ./dist",
    "ts-build-watch": "npm run ts-compile -- -w",
    "clean-src": "find ./src -name '*.js' -delete -o -name '*.map' -delete",
    "clean-test": "find ./test -name '*.js' -delete -o -name '*.map' -delete",
    "clean-test-app": "find ./test-app -name '*.js' -delete -o -name '*.map' -delete",
    "clean-dist": "find ./dist -name '*.js' -delete -o -name '*.map' -delete -o -name '*.ts' -delete",
    "clean-all": "npm run clean-src && npm run clean-test && npm run clean-test-app && npm run clean-dist",
    "pretest": "npm run ts-build",
    "test": "mocha --reporter spec --ui tdd --require ts-node/register './test/**/*.test.js' || true",
    "pretest-ci": "npm run pretest",
    "test-ci": "mocha --reporter spec --ui tdd --require ts-node/register './test/**/*.test.js'",
    "publish-package": "npm run ts-build-dist && git add . && git commit -m 'preparing to publish new version' && npm version patch && git push && npm publish --access=public",
    "prebundle": "npm run ts-build",
    "webpack-build": "webpack",
    "webpack-build-watch": "npm run webpack-build -- -w",
    "nodemon": "nodemon --ignore src/ --ignore test/ --ignore test-app/client/ --inspect=4001 ./test-app/main.js env=dev",
    "predev": "npm run ts-build",
    "dev": "npm run ts-build-watch & npm run webpack-build-watch & npm run nodemon",
    "build": "npm run ts-build && env=prod npm run webpack-build",
    "start": "node ./test-app/main.js env=prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nivinjoseph/n-app.git"
  },
  "keywords": [
    "SPA",
    "Vue.js",
    "Framework"
  ],
  "author": "NiviN",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nivinjoseph/n-app/issues"
  },
  "homepage": "https://github.com/nivinjoseph/n-app#readme",
  "devDependencies": {
    "@nivinjoseph/n-util": "^1.0.22",
    "@nivinjoseph/n-web": "^3.2.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "^8.9.5",
    "@types/toastr": "^2.1.35",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.7",
    "ts-node": "^2.1.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.1",
    "vue": "^2.5.21",
    "vue-router": "^3.0.2"
  },
  "dependencies": {
    "@babel/core": "^7.1.2",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@nivinjoseph/n-config": "^1.0.23",
    "@nivinjoseph/n-defensive": "^1.0.21",
    "@nivinjoseph/n-exception": "^1.0.16",
    "@nivinjoseph/n-ext": "^1.1.2",
    "@nivinjoseph/n-ject": "^1.1.3",
    "@types/jquery": "^3.3.10",
    "autoprefixer": "^9.1.5",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^0.1.19",
    "compression-webpack-plugin": "^2.0.0",
    "css-loader": "^1.0.0",
    "file-loader": "^2.0.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^4.6.0",
    "jquery": "^3.3.1",
    "mini-css-extract-plugin": "^0.4.3",
    "node-sass": "^4.9.3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss": "^7.0.5",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "reflect-metadata": "^0.1.12",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "url-loader": "^1.1.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  }
}
